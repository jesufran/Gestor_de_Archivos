{
  "name": "gestos-nube-respaldo",
  "version": "1.0.0",
  "description": "Una aplicaci√≥n elegante para gestionar documentos, tareas, seguimientos e informes con modos claro y oscuro.",
  "private": true,
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "build:js": "esbuild index.tsx --bundle --outfile=dist/bundle.js --jsx=automatic --minify",
    "build:static": "node scripts/copy-static.js",
    "build": "npm run build:css && npm run build:js && npm run build:static",
    "dev:css": "npx tailwindcss -i ./src/input.css -o ./output.css --watch",
    "dev:js": "esbuild index.tsx --bundle --outfile=bundle.js --jsx=automatic --sourcemap --watch",
    "dev": "start cmd.exe /c \"npm run dev:css && exit\" & npm run dev:js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@google/genai": "^1.16.0",
    "firebase": "^12.2.1",
    "firebase-admin": "^12.2.0",
    "idb": "^8.0.0",
    "jszip": "^3.10.1",
    "mitt": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@netlify/functions": "^4.2.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.3"
  }
}
